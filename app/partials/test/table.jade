div.container(ng-controller='tableCtrl', ui-view)
  //div.toolbar(dnt-bind='ActionService.bindSelection("checkboxes.items") as actionService')
  div.toolbar(dnt-service='ActionService', dnt-data='checkboxes.items')
    button(type='button', weighing='1', require-css='approved', reject-css='msc', dnt-fire='ActionService.gotoState("table.detail")') Approve
    //button(type='button', dnt-fire='ActionService.perform("test")') Reject
    table.table(ng-table="tableParams")
      tr(ng-repeat="phone in phones")
        td(style='text-align: left', with='30')
          input(type='checkbox', ng-model="checkboxes.items[phone.age]")
        td(data-title="Name") {{phone.name}}
        td(data-title="ID")  {{phone.id}}